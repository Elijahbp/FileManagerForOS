<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManagerForOS"
        xmlns:Properties="clr-namespace:FileManagerForOS.Properties" x:Class="FileManagerForOS.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"  Height="600" Width="800" MinHeight="600" MinWidth="800" Initialized="Window_Initialized"
        KeyDown="Window_KeyDown" Closing="Window_Closing"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="98"/>
            <ColumnDefinition Width="97"/>
            <ColumnDefinition Width="530*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblNamePC" Content="NamePC" Margin="0,8,10,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="107" Grid.Column="3" TextOptions.TextFormattingMode="Display"/>
        <Label x:Name="lblInfoPath" Content="Path" Margin="10,10,0,0" Height="25" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Left" Width="465"/>
        <TreeView x:Name="mainTreeView" Margin="12,40,3,10" Width="180" Grid.ColumnSpan="2" >
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Создать новую папку" Click="MenuItem_Click_CreateNewFolder"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>

        <WrapPanel x:Name="MainSpace" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="5,40,10,10" Grid.Column="2" ScrollViewer.VerticalScrollBarVisibility="Auto" UseLayoutRounding="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
            <WrapPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Создать новую папку" Click="MenuItem_Click_CreateNewFolder"/>
                    <MenuItem Header="Создать новый файл" Click="MenuItem_Click_CreateNewFile"/>
                    <MenuItem Header="Обновить" Click="MenuItem_Click_RefreshFile"/>
                    <MenuItem x:Name="insertMenuItem" Header="Вставить" IsEnabled="False" Click="MenuItem_Click_InsertFile"/>
                    <MenuItem  Header="Показать скрытые файлы" Click="MenuItem_Click_ShowHidenFiles"/>
                </ContextMenu>
            </WrapPanel.ContextMenu>
        </WrapPanel>
        <Button x:Name="btnBack" Content="Вверх" HorizontalAlignment="Left" Margin="12,13,0,0" VerticalAlignment="Top" Width="40" Click="btnBack_Click" Height="20" />

    </Grid>
</Window>
